#lang scheme

;QTN ONE
;bubblesort

(define (bubblesort L)
 (if (null? (cdr L))
  L
  (if (< (car L) (cadr L))
      (cons(car L) (bubblesort (cdr L)))
      (cons(cadr L) (bubblesort (cons (car L) (cddr L)))))))

(define (bubble-sort N L)
  (cond (( = N 1 ) (bubblesort L))
        (else (bubble-sort ( - N 1 ) (bubble L)))))
  
(bubble-sort 6 (list 132 4 2 8 5 7))