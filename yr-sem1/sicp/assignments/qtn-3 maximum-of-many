#lang racket
;;QTN 3
;;maximum-of-many
(define (max a b) (if (> a b) a b))

(define (maximum-of-many a)
  (let loop [(x -inf.0) (a a)] ;;-inf.0 (negative infinity)
    (if (empty? a)
        (list x)
        (loop (max (car a) x) (cdr a)))))

(maximum-of-many '(10 20 30 40))
(maximum-of-many '(12 8))